generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model ingredientes {
  id                Int                 @id @default(autoincrement())
  nombre            String
  costoUnitario     Decimal
  cantidadTotal     Int
  createdAt         DateTime            @default(now())
  quequeingrediente quequeingrediente[]
}

model quequeingrediente {
  quequeId      Int
  ingredienteId Int
  cantidad      Int          @default(1)
  createdAt     DateTime     @default(now())
  ingredientes  ingredientes @relation(fields: [ingredienteId], references: [id], map: "QuequeIngrediente_ingredienteId_fkey")
  queques       queques      @relation(fields: [quequeId], references: [id], map: "QuequeIngrediente_quequeId_fkey")

  @@id([quequeId, ingredienteId])
  @@index([ingredienteId], map: "QuequeIngrediente_ingredienteId_fkey")
}

model queques {
  id                Int                 @id @default(autoincrement())
  nombre            String
  createdAt         DateTime            @default(now())
  quequeingrediente quequeingrediente[]
  reporte           reporte?
}

model reporte {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  quequeid   Int      @unique(map: "Reporte_quequeid_key")
  costoTotal Decimal
  queques    queques  @relation(fields: [quequeid], references: [id], map: "Reporte_quequeid_fkey")
}
